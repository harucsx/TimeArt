<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.devhi.timeart.fragments.ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/menu_hourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="시간별"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/bar_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#ffffff"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="일별"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/bar_daily"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_weekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="주별"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/bar_weekly"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="월별"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/bar_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>
</FrameLayout>
